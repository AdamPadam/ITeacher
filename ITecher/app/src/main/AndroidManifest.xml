<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itecher.adampadam.itecher">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_dictionary_dark"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".practice.PracticeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DictActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".practice.SelectWordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".practice.EndPracticeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".practice.SelectListenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".practice.GrammarListenActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>